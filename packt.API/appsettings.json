{
  "ConnectionStrings": {
        "packtApiDBConnectionString": "Server=(localdb)\\mssqllocaldb;Database=packt;User Id=sa;Password=;Trusted_Connection=True;MultipleActiveResultSets=True"
  
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:5341" }
      }
    ]
  },
  "AllowedHosts": "*"
}
